# Base16 {{scheme-name}} 256 - alacritty color config
# {{scheme-author}}

# Default colors
[colors.primary]
background = '#{{base00-hex}}'
foreground = '#{{base03-hex}}'

# Colors the cursor will use if `custom_cursor_colors` is true
[colors.cursor]
text = '#{{base00-hex}}'
cursor = '#{{base03-hex}}'

# Normal colors
[colors.normal]
black = '#{{base00-hex}}'
red = '#{{base08-hex}}'
green = '#{{base0B-hex}}'
yellow = '#{{base0A-hex}}'
blue = '#{{base0D-hex}}'
magenta = '#{{base0E-hex}}'
cyan = '#{{base0D-hex}}'
white = '#{{base05-hex}}'

# Bright colors
[colors.bright]
black = '#{{base03-hex}}'
red = '#{{base08-hex}}'
green = '#{{base0B-hex}}'
yellow = '#{{base0A-hex}}'
blue = '#{{base0C-hex}}'
magenta = '#{{base0E-hex}}'
cyan = '#{{base0C-hex}}'
white = '#{{base05-hex}}'

[[colors.indexed_colors]]
index = 16
color = "#{{base0B-hex}}"

[[colors.indexed_colors]]
index = 17
color = "#{{base0D-hex}}"

[[colors.indexed_colors]]
index = 18
color = "#{{base03-hex}}"

[[colors.indexed_colors]]
index = 19
color = "#{{base04-hex}}"

[[colors.indexed_colors]]
index = 20
color = "#{{base06-hex}}"

[[colors.indexed_colors]]
index = 21
color = "#{{base09-hex}}"

[colors.selection]
text = "CellForeground"
background = "#{{base02-hex}}"
